@model GradesModel;

<h3>Calculate your grade in 413! </h3>
<form method="post">
    <label>Enter in the percentages you expect to recieve ie 95% -> 95</label>
    <br>
    <label>Assignments:</label>
    <input id="assignments" asp-for="Assignments" type="number" min="0" max="100" /><br>
    <label>Group Projects:</label>
    <input id="group" asp-for="Group" type="number" min="0" max="100" /><br>
    <label>Quizzes:</label>
    <input id="quizzes" asp-for="Quizzes" type="number" min="0" max="100" /><br>
    <label>Exams:</label>
    <input id="exams" asp-for="Exams" type="number" min="0" max="100" /><br>
    <label>INTEX:</label>
    <input id="intex" asp-for="Intex" type="number" min="0" max="100" /><br>
    <input id="buttonSend" type="submit" value="What will I get?" />

    <div asp-validation-summary="All"></div>
</form>
